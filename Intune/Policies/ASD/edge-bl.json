{
  "displayName": "Security baseline for Microsoft Edge",
  "description": "ASD Blueprint - Security baseline for Microsoft Edge",
  "platform": "Windows 10 and later",
  "settings": {
    "microsoftEdge": {
      "allowUnconfiguredSitesReloadInIEMode": {
        "displayName": "Allow unconfigured sites to be reloaded in Internet Explorer mode",
        "value": "Disabled",
        "omaUri": "./Device/Vendor/MSFT/Policy/Config/Browser/ConfigureInternetExplorerIntegrationReloadInIEModeAllowed"
      },
      "allowUsersToProceedException": {
        "displayName": "Allow users to proceed from the HTTPS warning page",
        "value": "Disabled",
        "omaUri": "./Device/Vendor/MSFT/Policy/Config/Browser/PreventCertErrorOverrides"
      },
      "enableBrowserLegacyExtensionPointBlocking": {
        "displayName": "Enable browser legacy extension point blocking",
        "value": "Enabled",
        "omaUri": "./Device/Vendor/MSFT/Policy/Config/Browser/EnableBrowserLegacyExtensionPointBlocking"
      },
      "enableSiteIsolation": {
        "displayName": "Enable site isolation for every site",
        "value": "Enabled",
        "omaUri": "./Device/Vendor/MSFT/Policy/Config/Browser/SitePerProcess"
      },
      "enhanceImagesEnabled": {
        "displayName": "Enhance images enabled",
        "value": "Disabled",
        "omaUri": "./Device/Vendor/MSFT/Policy/Config/Browser/EdgeEnhanceImagesEnabled"
      },
      "forceWebSQL": {
        "displayName": "Force WebSQL to be enabled",
        "value": "Disabled",
        "omaUri": "./Device/Vendor/MSFT/Policy/Config/Browser/WebSQLAccess"
      },
      "minimumTLSVersion": {
        "displayName": "Minimum TLS version enabled",
        "value": "Enabled",
        "configuredValue": "TLS 1.2",
        "omaUri": "./Device/Vendor/MSFT/Policy/Config/Browser/SSLMinVersion"
      },
      "showReloadInIEModeButton": {
        "displayName": "Show the Reload in Internet Explorer mode button in the toolbar",
        "value": "Disabled",
        "omaUri": "./Device/Vendor/MSFT/Policy/Config/Browser/InternetExplorerModeToolbarButtonEnabled"
      },
      "sharedArrayBufferNonIsolated": {
        "displayName": "Specifies whether SharedArrayBuffers can be used in a non cross-origin-isolated context",
        "value": "Disabled",
        "omaUri": "./Device/Vendor/MSFT/Policy/Config/Browser/SharedArrayBufferUnrestrictedAccessAllowed"
      }
    },
    "extensions": {
      "extensionInstallBlocklist": {
        "displayName": "Control which extensions cannot be installed",
        "value": "Enabled",
        "extensionIds": "*",
        "omaUri": "./Device/Vendor/MSFT/Policy/Config/Browser/ExtensionInstallBlocklist"
      }
    },
    "httpAuthentication": {
      "allowBasicAuth": {
        "displayName": "Allow Basic authentication for HTTP",
        "value": "Disabled",
        "omaUri": "./Device/Vendor/MSFT/Policy/Config/Browser/BasicAuthOverHttpEnabled"
      },
      "authSchemes": {
        "displayName": "Supported authentication schemes",
        "value": "Enabled",
        "configuredSchemes": "ntlm,negotiate",
        "omaUri": "./Device/Vendor/MSFT/Policy/Config/Browser/AuthSchemes"
      }
    },
    "nativeMessaging": {
      "allowUserLevelNativeMessagingHosts": {
        "displayName": "Allow user-level native messaging hosts (installed without admin permissions)",
        "value": "Disabled",
        "omaUri": "./Device/Vendor/MSFT/Policy/Config/Browser/NativeMessagingUserLevelHosts"
      }
    },
    "passwordManager": {
      "enablePasswordManager": {
        "displayName": "Enable saving passwords to the password manager",
        "value": "Disabled",
        "omaUri": "./Device/Vendor/MSFT/Policy/Config/Browser/AllowPasswordManager"
      }
    },
    "privateNetworkRequest": {
      "insecurePrivateNetworkRequests": {
        "displayName": "Specifies whether to allow insecure websites to make requests to more-private network endpoints",
        "value": "Disabled",
        "omaUri": "./Device/Vendor/MSFT/Policy/Config/Browser/InsecurePrivateNetworkRequestsAllowed"
      }
    },
    "smartScreen": {
      "enableSmartScreen": {
        "displayName": "Configure Microsoft Defender SmartScreen",
        "value": "Enabled",
        "omaUri": "./Device/Vendor/MSFT/Policy/Config/Browser/AllowSmartScreen"
      },
      "blockPUA": {
        "displayName": "Configure Microsoft Defender SmartScreen to block potentially unwanted apps",
        "value": "Enabled",
        "omaUri": "./Device/Vendor/MSFT/Policy/Config/Browser/PreventSmartScreenPromptOverride"
      },
      "preventBypassSites": {
        "displayName": "Prevent bypassing Microsoft Defender SmartScreen prompts for sites",
        "value": "Enabled",
        "omaUri": "./Device/Vendor/MSFT/Policy/Config/Browser/PreventSmartScreenPromptOverride"
      },
      "preventBypassDownloads": {
        "displayName": "Prevent bypassing of Microsoft Defender SmartScreen warnings about downloads",
        "value": "Enabled",
        "omaUri": "./Device/Vendor/MSFT/Policy/Config/Browser/PreventSmartScreenPromptOverrideForFiles"
      }
    }
  },
  "assignments": {
    "includedGroups": [],
    "excludedGroups": []
  },
  "metadata": {
    "source": "ASD Blueprint for Secure Cloud",
    "sourceUrl": "https://blueprint.asd.gov.au/configuration/intune/endpoint-security/security-baselines/security-baseline-for-microsoft-edge/",
    "createdDate": "2025-12-01",
    "version": "1.0"
  }
}
